<Window x:Class="ownshot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ownshot"
        WindowStyle="None"
        mc:Ignorable="d"
        Title="OwnShot" Height="1" Width="1" ResizeMode="NoResize">
    <!--ShowInTaskbar="False"
        Visibility="Hidden"
        AllowsTransparency="True"
        Background="Transparent" -->
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="300"/>
        <Canvas x:Name="BackPanel">
            <Rectangle x:Name="selectionRectangle" Stroke="LightBlue" Fill="#220000FF" Visibility="Collapsed" />
            <Button x:Name="button" Content="Exit" Canvas.Left="10" Canvas.Top="10" Width="28" Click="button_Click"/>
        </Canvas>
    </Grid>
</Window>
